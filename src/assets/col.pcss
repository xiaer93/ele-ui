/*
    暂不支持单行//注释
*/
[class*="c-col-"] {
    float: left;
    box-sizing: border-box;
}

.c-col-0{
    display: none;
}

@for $i from 1 to 24 {
    .c-col-$i {
        width: calc(1 / 24 * $i * 100%);
    }

    .c-col-offset-$i {
        margin-left: calc(1 / 24 * $i * 100%);
    }

    .c-col-pull-$i {
        position: relative;
        right: calc(1 / 24 * $i * 100%);
    }

    .c-col-push-$i {
        position: relative;
        left: calc(1 / 24 * $i * 100%);
    }
}